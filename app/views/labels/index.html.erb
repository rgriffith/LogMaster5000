<div class="row">
	<div class="span7">
		<h3>Labels</h3>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			<% if @labels.size < 1 %>
				<tr>
					<td colspan="2">There are currently no labels files to list. Feel free to create one.</td>
				</tr>
			<% else %>
				<% @labels.each do |label| %>
					<tr id="label_<%= label.id %>">
						<td><%= link_to label.name, label_path(label) %></td>
						<td>
							<%= link_to raw('<i class="icon-pencil"></i>'), edit_label_path(label), :title => 'Edit label' %>
							<%= link_to raw('<i class="icon-trash"></i>'), label, :method => 'delete', :confirm => 'Are you sure you want to delete this label? This cannot be undone.', :title => 'Delete label' %>
						</td>
					</tr>
				<% end %>
			<% end %>
			</tbody>
		</table>
	</div>
	<div class="span4">
		<div class="well" style="margin-top:30px">
			<h3>Create a Label</h3>
			<%= render 'form' %>
		</div>
	</div>
</div>